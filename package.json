    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "description": "React Position Tools For HTML Elements",
    "version": "v0.1.2",
    "author": "3nder",
    "devDependencies": {
        "@react-hook/throttle": "^2.2.0",
